<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/head') %>
  <link rel="stylesheet" href="stylesheets/profile.css">
  <title>Profile</title>
</head>

<body>
  <main id="main" class="bg">
    <%- include('partials/navbar') %>
    <div id="content" class="container d-flex flex-column justify-content-center text-center">
      <div class="row">
        <div class="col">
          <div id="data" class="mx-auto mt-5">
            <p class="h3 text-orange mb-5"><%= userlogin %>'s profile</p>
            <div class="mb-3">
              <p class="h5 text-white">Name : <p>
              <p class="text-white"><%= name %></p>
            </div>
            <div class="mb-3">
              <p class="h5 text-white">Bio : </p>
              <p class="text-white"><%= bio %></p>
            </div>
            <div class="mb-4">
              <p class="h5 text-white">Website : <p>
              <p class="text-white"><%= url %></p>
            </div>
            <a class="btn btn-warning fw-bold text-uppercase w-25" href="/profile/edit">Edit</a>
          </div>
        </div>
      </div>
    </div>
    <%- include('partials/footer') %>
  </main>

  <%- include('partials/script') %>
</body>

</html>