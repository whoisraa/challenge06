<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/head') %>
  <link rel="stylesheet" href="stylesheets/profile.css">
  <style>
    :root {
      --orange-color: #f9b23e;
      --orange-dark: #c78e32;
      --orange-light: #ffca2c;
    }

    html,
    body {
      height: 100%;
      margin: 0;
    }

    nav .navbar-brand {
      letter-spacing: 0.3rem;
    }

    nav .nav-link {
      letter-spacing: 0.1rem;
      font-weight: 600;
      font-size: 0.9rem;
    }

    a,
    p {
      font-family: 'Open Sans', sans-serif;
    }

    .display-2,
    .h1,
    .h2,
    .h3,
    .h4 {
      font-family: Arial, Helvetica, sans-serif;
    }

    .h1 {
      letter-spacing: 0.2rem;
    }

    .text-orange {
      color: var(--orange-color);
    }

    .border-orange {
      border-color: var(--orange-color);
    }

    .btn-warning {
      width: 15rem;
      padding: 1rem 1rem;
      background-color: var(--orange-color);
    }

    .btn-warning:focus,
    .btn-warning:hover {
      box-shadow: 0 0 10px var(--orange-light), 0 0 40px var(--orange-light, 0 0 80px var(--orange-light));
    }

    .bg::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url("../images/features.jpg");
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
      z-index: -1;
    }

    #content {
      min-height: 85vh;
    }

    #form {
      max-width: 500px;
      background-color: rgba(0, 0, 0, 0.8);
      border: 1px solid var(--orange-color);
      padding: 40px 40px;
    }

    #form .form-control {
      height: 50px;
    }

    #form .form-control:focus,
    #form .form-check-input:focus,
    #form .form-check-input:checked {
      box-shadow: 0 0 10px var(--orange-color), 0 0 40px var(--orange-color, 0 0 60px var(--orange-color));
    }

    #form .form-check-input {
      background-color: rgb(33, 37, 41);
      opacity: 1;
    }

    #form .form-check-input:checked {
      background-color: var(--orange-color);
    }

    #form a:hover {
      color: var(--orange-dark);
      text-decoration: underline !important;
    }
  </style>
  <title>Profile</title>
</head>

<body>
  <main id="main" class="bg">
    <%- include('partials/navbar') %>
    <div id="content" class="container d-flex flex-column justify-content-center text-center">
      <div class="row">
        <div class="col">
          <form id="form" class="mx-auto mt-5" action="/profile/update" method="post">
            <p class="h3 text-orange mb-5"><%= userlogin %>'s profile</p>
            <% userList.forEach((user) => { %>
            <div class="mb-3">
              <label for="name" class="form-label text-white">Name :</label>
              <input type="text" class="form-control text-center border-0 bg-light" id="name" name="name"
                aria-describedby="name" tabindex="1" value="<%= user.name %>">
            </div>
            <div class="mb-3">
              <label for="bio" class="form-label text-white">Bio :</label>
              <textarea type="text" class="form-control text-center border-0 bg-light" id="bio" name="bio"
                tabindex="2"><%= user.bio %></textarea>
            </div>
            <div class="mb-4">
              <label for="url" class="form-label text-white">Website :</label>
              <input type="url" class="form-control text-center border-0 bg-light" id="url" name="url"
                aria-describedby="url" tabindex="3" value="<%= user.url %>">
            </div>
            <% }); %>
            <button type="submit" class="btn btn-warning fw-bold text-uppercase w-25" tabindex="4">Save</button>
          </form>
        </div>
      </div>
    </div>
    <%- include('partials/footer') %>
  </main>

  <%- include('partials/script') %>
</body>

</html>